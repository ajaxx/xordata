extends layout

block content
  include header.jade
  section(class="section")
    .card
      .card-header
        p.card-header-title User Profile
      .card-content.control(id='user-profile')
        .field
          label.label Username
          .control.has-icons-left
            input.input(type='text' readonly value='#{userProfile.user}')
            span.icon.is-small.is-left
              i.fas.fa-user
        .field
          label.label Name
          .control
            input.input(type='text' value='#{userProfile.display_name}')
        .field
          label.label Email
          .control.has-icons-left
            input.input(type='email' readonly value='#{userProfile.email}')
            span.icon.is-small.is-left
              i.fas.fa-envelope
        button.button.is-link
          | Submit
        button.button.is-light.ml-2
          | Cancel